 journal = {International Journal of Adhesion and Adhesives},
 langid = {english},
 month = {June},
 pages = {155--164},
 title = {Susceptor-Assisted Induction Curing Behaviour of a Two Component Epoxy Paste Adhesive for Aerospace Applications},
